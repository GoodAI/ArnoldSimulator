// Definitions for the Request messages

namespace GoodAI.Arnold.Network;


// Error response.

table ErrorResponse {
	message:string;
}

// End of error response.


// State response.

enum StateType:byte {
	Empty,
	Running,
	Paused,
	ShuttingDown
}

table StateResponse {
	state:StateType;
}

// End of state response.


// Model (topology and activity) response.

table Position {
	x:float;
	y:float;
	z:float;
}

table Region {
	index:uint;
	name:string;
	type:string;
	lowerBound:Position;
	upperBound:Position;
}

enum Direction:byte {
	Forward,
	Backward
}

table Connector {
	regionIndex:uint;
	name:string;
	direction:Direction;
	size:uint;
}

table Connection {
	fromRegion:uint;
	fromConnector:string;
	toRegion:uint;
	toConnector:string;
	direction:Direction;
}

table Neuron {
	id:uint;
	type:string;
	position:Position;
}

table Synapse {
	from:uint;
	to:uint;
}

table ModelResponse {
	// Region and above - incremental changes, the UI holds complete topology.
	addedRegions:[Region];
	repositionedRegions:[Region];
	removedRegions:[uint];
	
	addedConnectors:[Connector];
	removedConnectors:[Connector];
	
	addedConnections:[Connection];
	removedConnections:[Connection];
	
	// Neuron and below - the core sends everything according to a predefined filter.
	addedNeurons:[Neuron];
	repositionedNeurons:[Neuron];
	removedNeurons:[uint];
	
	addedSynapses:[Synapse];
	spikedSynapses:[Synapse];
	removedSynapses:[Synapse];
}

// End of model response.


// All the responses must be here, including error.
union Response {
	ErrorResponse,
	StateResponse,
	ModelResponse
}

table ResponseMessage {
	response:Response;
}

root_type ResponseMessage;
