// Definitions for the Request messages

namespace GoodAI.Arnold.Communication;

enum CommandType:byte {
	Load,
	Run,
	Pause,
	Clear,
	Shutdown
}

table CommandRequest {
	command:CommandType;
	stepsToRun:uint;
}

table GetStateRequest {}

// TODO: Add filter specification in the request later.
table GetModelRequest {
	full:bool;
}

union Request {
	CommandRequest,
	GetStateRequest,
	GetModelRequest
}

table RequestMessage {
	request:Request;
}

root_type RequestMessage;
